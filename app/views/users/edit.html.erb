<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user ,url: '/users' , method: :post  do |f| %>
        <div class="form-group">
        <!--判定部分は削除-->
          <div class="field">
            <label>Name</label>
            <%= f.text_field :name , class: 'form-control book_title'%>
          </div>
          <div class="field">
            <label>Image</label>
           <!--ファイル出力ボタンが表示-->
          </div>
          <div class="field">
            <label>Introduction</label>
            <%= f.text_area :introduction, class: 'form-control book_body'%>
          </div>
        </div>
        <!--送信処理-->
        <div class="action">
          <%= f.submit 'Update User' , class: 'btn btn-secondary'%>
        </div>
      <%end%>
    </div>
  </div>
</div>